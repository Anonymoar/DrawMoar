<Window x:Class="DrawMoar.MainWindow"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawMoar"
        mc:Ignorable="d"
        Title="DrawMoar" Height="350" Width="530">
    <Grid Background="LightGray">
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="120">
            <MenuItem Header="File">
                <MenuItem Header="New"
                          Click="CreateCartoon"/>
                <MenuItem Header="Open"/>
                <MenuItem Name="menuSave" Header="Save" Command="Save" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save as...">
                    <MenuItem Header="MP4"
                              Click="ExportToMP4"/>
                    <MenuItem Header="AVI"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Frame">
                <MenuItem Header="Add picture"/>
                <MenuItem Header="Save as...">
                    <MenuItem Header="PNG"
                              Click="SaveToPNG"/>
                    <MenuItem Header="JPEG"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <DockPanel Name="rootPanel" LastChildFill="False">
            <Grid DockPanel.Dock="Left"  Background="WhiteSmoke" MinWidth="120" Margin="0,20,0,0" Width="108">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width ="60"></ColumnDefinition>
                    <ColumnDefinition Width="60"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Button x:Name="button1" Height ="30" Width="50" Content="Lines" Click="AddLine"/>
                <Button x:Name="button" Content="Brush" Height="30" Width="50" Grid.Column="1" />
                <Button x:Name="button2" Content="Button" Height="30" Width="50" Grid.Row="1"/>
                <Button x:Name="button3" Grid.Column="1" Height="30" Width="50" Grid.Row="1" Click="CreateNewFrame"/>
            </Grid>
            <StackPanel DockPanel.Dock="Right" MinWidth="120">
                <WrapPanel x:Name="listBox" HorizontalAlignment="Left" Width="121" MinHeight="160" 
                           Background="WhiteSmoke" VerticalAlignment="Top"/>
                <WrapPanel x:Name="listBox1" HorizontalAlignment="Left" Width="120" MinHeight="160" Background="WhiteSmoke" VerticalAlignment="Top">
                    <xctk:ColorPicker x:Name="ClrPcker_Background" Margin="65,5,0,0" SelectedColorChanged="ClrPcker_Background_SelectedColorChanged" Height="25" Width="50"/>
                </WrapPanel>
            </StackPanel>
        </DockPanel>
        <InkCanvas x:Name="canvas" EditingMode="None" x:FieldModifier="private" 
                       Opacity="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="160,34,162,85" Width="200" Height="200"/>
    </Grid>
    <Window.CommandBindings>
        <CommandBinding Command="Save" Executed="ButtonSaveClicked"></CommandBinding>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Control" Command="Save"></KeyBinding>
    </Window.InputBindings>
</Window>
