<Window x:Class="DrawMoar.MainWindow"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawMoar"
        mc:Ignorable="d"
        Title="DrawMoar" Height="350" Width="530">
    <Grid Background="LightGray">
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="120">
            <MenuItem Header="File">
                <MenuItem Header="New"
                          Click="CreateCartoon"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Save as...">
                    <MenuItem Header="MP4"
                              Click="ExportToMP4"/>
                    <MenuItem Header="AVI"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Frame">
                <MenuItem Header="Add picture"/>
                <MenuItem Header="Save as...">
                    <MenuItem Header="PNG"
                              Click="SaveToPNG"/>
                    <MenuItem Header="JPEG"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <DockPanel Name="rootPanel" LastChildFill="False">
            <StackPanel DockPanel.Dock="Left" Margin="0,20,0,0" Background="WhiteSmoke" MinWidth="120" MaxWidth="120">
                <WrapPanel Height="160" Background="CadetBlue"></WrapPanel>
                <WrapPanel Height="40" Background="Coral">
                    <xctk:ColorPicker x:Name="ClrPcker_Background"  Margin="25,7,0,0" SelectedColorChanged="ClrPcker_Background_SelectedColorChanged" Height="25" Width="70"/>
                </WrapPanel>
                <WrapPanel Height="100" Background="Gray">
                    <Slider x:Name="slider" Width="100" Margin="10,10"/>
                </WrapPanel>
                
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Background="WhiteSmoke" MinWidth="120">
                <WrapPanel Name="buttons" Height="40" Background="LightGreen">
                    <Button x:Name="button1" Height ="25" Width="40" Margin="10,5" Content="Lines" Click="AddLine"/>
                </WrapPanel>
                <WrapPanel Name="layers" Width="120" Background="Wheat" MinHeight="120"/>
                <WrapPanel Width="120" Background="Aqua" MinHeight="40"/>
                <WrapPanel  x:Name="frames"  Background="Khaki" Width="120" MinHeight="120"/>
            </StackPanel>
        </DockPanel>
        <InkCanvas x:Name="canvas" EditingMode="None" x:FieldModifier="private" 
                       Opacity="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="160,34,162,85" Width="200" Height="200"/>
    </Grid>
</Window>
